<!doctype html>
<html lang="ja">
	<head>
		<title>トミこれ（トミカこれくしょん）</title>
		<meta charset="UTF-8">
		<% if (session) { %>
			<meta name="uid" content="<%= session.user.uid %>">
			<meta name="photo" content="<%= session.user.photos[0].value %>">
			<meta name="name" content="<%= session.user.displayName %>">
		<% } %>

		<link rel="stylesheet" type="text/css" href="./css/bootstrap.min.css">
		<link rel="stylesheet" href="./css/style.css" type="text/css" />
	</head>
	<body>
	<div class="jumbotron">
		<img src="./image/5_White_logo_on_black_318x75.png">
		<% if (!session) { %>
			<button class="btn btn-default">
		        <a href="/auth/twitter" class="btn-large waves-effect waves-light" style="text-transform: none">Twitterでログイン</a>
			</button>
	    <% }  %>
	</div>
<% if (session) { %>
    <div class="container">
		<div class="raw" id="private">
		</div>
	</div>
<% } else { %>
    <div class="container">

		<div class="raw" id="root">
		</div>
	</div>
<% }  %>

	<script src="./js/mithril.min.js"></script>
	<script src="./js/root.js"></script>
	<script src="./js/private.js"></script>
	</body>
</html>